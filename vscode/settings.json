{
  // Editor
  "editor.fontLigatures": true,
  "editor.fontFamily": "'JetBrainsMono Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.suggestSelection": "first",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "punctuation.definition.comment"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  // Languages
  // Bash
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  // JS & TS
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifierEnding": "js",
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  // Formats
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  // Front
  "files.associations": {
    "*.ejs": "html",
    "*.isml": "html",
    "*.mdoc": "markdown",
    "*.ftl": "fluent"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  // C/C++
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 80, AllowShortIfStatementsOnASingleLine: false }",
  "C_Cpp.autocompleteAddParentheses": true,
  "launch": {
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Makefile",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/.bin/${fileBasenameNoExtension}",
        "args": [],
        "stopAtEntry": true,
        "cwd": "${fileDirname}",
        "internalConsoleOptions": "neverOpen",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "Build project",
        "postDebugTask": "Remove directory for binaries",
        "miDebuggerPath": "/usr/bin/gdb"
      }
    ]
  },
  // Python
  "python.formatting.blackArgs": [
    "--line-length",
    "79",
    "--skip-string-normalization"
  ],
  "python.formatting.provider": "black",
  // General
  "security.workspace.trust.untrustedFiles": "open",
  "debug.onTaskErrors": "showErrors",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": false,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "workbench.startupEditor": "none",
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  // Extensions
  "git.autofetch": true,
  // Theme customizations
  "workbench.colorTheme": "Monokai Pro",
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#1e1e1e",
    "titleBar.activeForeground": "#b8b8b8"
  },
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
  "window.titleBarStyle": "custom",
  "workbench.iconTheme": "Monokai Pro Icons",
  "editor.tabSize": 2,
  "editor.codeLens": false,
  "editor.inlayHints.enabled": "off",
  "editor.fontSize": 15,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "editor.detectIndentation": false,
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "window.zoomLevel": 1,
  "code-runner.clearPreviousOutput": true,
  "files.autoSave": "onFocusChange",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "editor.largeFileOptimizations": false,
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "tabnine.experimentalAutoImports": true,
  "eslint.format.enable": true,
  "todohighlight.keywords": [
    {
      "text": "NOTE:",
      "backgroundColor": "gray",
      "color": "white"
    }
  ],
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "javascript.preferences.importModuleSpecifier": "relative",
  "terminal.integrated.shellIntegration.enabled": false
}
